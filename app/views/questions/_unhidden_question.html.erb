<div class="a_question container mb">
  <p class="mb-sm"> <%= link_to "Question #{question.id}", question_path(question), { class: "link", tabindex: "1" } %>:
    <% if question.body.length <= 80 %>
      <%= question.body %>
    <% else %>
      <%= "#{question.body[0..80]}..."%>
    <% end %>
  </p>
</div>