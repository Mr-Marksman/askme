<%= form_with model: @question do |form| %>
  <%= form.hidden_field :user_id %>

  <p class="center"><%= form.label :body, "New question text", class: "label" %></p>
  <p><%= form.text_area :body, rows: 5, class: "form_text mt-lg" %></p>
  
  <p class="mt"><%= form.submit "Save", class: "button mb-lg" %></p>
<% end %>