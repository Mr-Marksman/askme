<%= form_with model: @question do |form| %>
  <p><%= form.label :body, "New question text" %></p>
  <p><%= form.text_area :body, rows: 5, class: "form_text" %></p>
  
  <p class="mt"><%= form.label :user_id, "User_ID" %></p>
  <p><%= form.text_field :user_id, class: "form_id" %></p>
  <p class="mt"><%= form.submit "Edit", class: "button lf mr" %></p>
<% end %>